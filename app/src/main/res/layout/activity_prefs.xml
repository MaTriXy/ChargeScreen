<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Prefs" android:layout_height="fill_parent" android:layout_width="fill_parent"
    android:background="#eeeeee">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:background="@mipmap/rect" />

    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <android.support.v7.widget.Toolbar
                android:layout_width="fill_parent"
                android:layout_height="?attr/actionBarSize"
                android:id="@+id/toolbar" />


            <Space
                android:layout_width="fill_parent"
                android:layout_height="?attr/actionBarSize" />

            <TextView android:text="Settings" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="7dp"
                android:textColor="#aaaaaa" />

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/CardView1"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground"
                android:focusable="true"
                card_view:cardCornerRadius= "2dp"
                card_view:cardUseCompatPadding="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="16dp">

                    <Switch
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Enable Charge Screen"
                        android:id="@+id/switch2"
                        android:padding="16dp"
                        android:checked="false"
                        android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Starts the app when a charger is plugged in."
                        android:id="@+id/textView5"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
                        android:textColor="#757575" />

                    <Switch
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Night Mode"
                        android:id="@+id/switch1"
                        android:padding="16dp"
                        android:checked="false"
                        android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Lowers the brightness."
                        android:id="@+id/textView4"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
                        android:textColor="#757575" />

                    <Switch
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Fullscreen"
                        android:id="@+id/switchfull"
                        android:padding="16dp"
                        android:checked="false"
                        android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Changes system ui visibility."
                        android:id="@+id/textView4923"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
                        android:textColor="#757575" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <TextView android:text="Colors" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textColor="#aaaaaa" />

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/CardViewe"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground"
                android:focusable="true"
                card_view:cardCornerRadius= "2dp"
                card_view:cardUseCompatPadding="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal">

                        <Button
                            style="@style/AboutLibrariesTheme.Light"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Background Color"
                            android:id="@+id/button4"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:layout_weight="1"
                            android:layout_margin="0dp"
                            android:textColor="#000000"
                            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/imageView"
                            android:layout_weight="15"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/black" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Charge Color"
                            android:id="@+id/button2"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:layout_weight="1"
                            android:layout_margin="0dp"
                            style="@style/AboutLibrariesTheme.Light"
                            android:textColor="#000000"
                            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/imageView2"
                            android:layout_weight="15"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/black" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="System Bar Color"
                            android:id="@+id/button3"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:layout_margin="0dp"
                            style="@style/AboutLibrariesTheme.Light"
                            android:layout_weight="1"
                            android:textColor="#000000"
                            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/imageView3"
                            android:layout_weight="15"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            style="@style/AboutLibrariesTheme.Light"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Reset Colors"
                            android:id="@+id/button21"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:layout_weight="1"
                            android:textColor="#000000"
                            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <TextView android:text="Preview" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColor="#aaaaaa"
                android:id="@+id/prev" />

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/CardViewe1"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground"
                android:focusable="true"
                card_view:cardCornerRadius= "2dp"
                card_view:cardUseCompatPadding="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">



                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            style="@style/AboutLibrariesTheme.Light"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="See Changes"
                            android:id="@+id/button21726"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:layout_weight="1"
                            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>
</FrameLayout>
